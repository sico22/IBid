@model IBid.DAL.Models.Bid

@{
    ViewData["Title"] = "PlaceBid";
    Layout = "~/Views/Shared/_LayoutVolunteer.cshtml";
}

<h1>PlaceBid</h1>

<h4>Bid</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="PlaceBid">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BidId" class="control-label"></label>
                <input asp-for="BidId" class="form-control" />
                <span asp-validation-for="BidId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VolunteerId" class="control-label"></label>
                <input asp-for="VolunteerId" class="form-control" />
                <span asp-validation-for="VolunteerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CurrentPrice" class="control-label"></label>
                <input asp-for="CurrentPrice" class="form-control" />
                <span asp-validation-for="CurrentPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ShowBids">Back to List</a>
</div>

